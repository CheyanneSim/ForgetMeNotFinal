<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|top"
    android:padding="56dp">

    <EditText
        android:id="@+id/item_to_add_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Item"
        android:inputType="textCapWords"
        android:textAlignment="center"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/scan_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_to_add_editText"
        android:src="@drawable/ic_menu_camera" />

    <Button
        android:id="@+id/choose_expiry_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_to_add_editText"
        android:layout_centerHorizontal="true"
        android:text="Choose Expiry Date"
        android:textAlignment="center"
        android:visibility="visible"/>

    <CheckBox
        android:id="@+id/food_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_expiry_btn"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:clickable="true"
        android:text="Food Item"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/availability_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_checkBox"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:clickable="true"
        android:text="Available" />

</RelativeLayout>