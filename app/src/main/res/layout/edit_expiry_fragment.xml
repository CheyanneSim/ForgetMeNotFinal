<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right|top"
    android:padding="56dp">

    <TextView
        android:id="@+id/expiry_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/change_expiry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expiry_textView"
        android:layout_centerHorizontal="true"
        android:background="#BDE4E9"
        android:text="Choose Expiry Date"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_expiry_btn"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:text="DELETE"
        android:textColor="#BDE4E9"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_expiry_btn"
        android:layout_centerHorizontal="true"
        android:text="UPDATE"
        android:textColor="#BDE4E9"
        android:textSize="12sp"
        tools:layout_below="@id/change_expiry_btn" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_expiry_btn"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="CANCEL"
        android:textColor="#BDE4E9"
        android:textSize="12sp" />

</RelativeLayout>